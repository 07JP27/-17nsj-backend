@page
@model IndexModel
@{
    ViewData["Title"] = "ダッシュボード";
}

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title" style="margin-top: 0px; margin-bottom: 0px;">全体予定</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="cal_wrapper">
                        <div class="googlecal">
                            <iframe src="https://calendar.google.com/calendar/embed?showTitle=0&amp;showDate=0&amp;showPrint=0&amp;showCalendars=0&amp;showTz=0&amp;height=600&amp;wkst=1&amp;bgcolor=%23ffffff&amp;src=qv6b4ii8ok0k3kbobpqbs6s7j8%40group.calendar.google.com&amp;color=%2323164E&amp;ctz=Asia%2FTokyo" style="border-width:0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title" style="margin-top: 0px; margin-bottom: 0px;">各班予定</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="cal_wrapper">
                        <div class="googlecal">
                            <iframe src="https://calendar.google.com/calendar/embed?showTitle=0&amp;showDate=0&amp;showPrint=0&amp;showTz=0&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=4vs3btjcd1eu9rs388t0tidf9c%40group.calendar.google.com&amp;color=%23B1440E&amp;src=a5bo8rtvd5hqovpdje50b303gg%40group.calendar.google.com&amp;color=%232F6309&amp;ctz=Asia%2FTokyo" style="border-width:0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 style="margin-top: 0px; margin-bottom: 0px;">掲示板</h3>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>宛先</th>
                                    <th>件名</th>
                                    <th>発信者</th>
                                    <th>発信日時</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.お知らせリスト)
                                {
                                    <tr>
                                        <td>@item.Receiver</td>
                                        <td><a href="/NoticeBoardDetail?id=@item.Id">@item.Title</a></td>
                                        <td>@item.Sender</td>
                                        <td>@item.CreatedAt.AddHours(9).ToString("yyyy/MM/dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>