@page
@model _17nsj.Jedi.Pages.JamGoodsStockManageModel
@using _17nsj.Jedi.Domains;
@using _17nsj.Jedi.Extensions;
@{
    ViewData["Title"] = "ジャンボリーグッズ在庫管理";
}

<section class="content">
    <div>
        <div class="box box-primary">
            <div class="box-body">
                <div class="col-md-8 col-md-offset-2">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.TargetGoods.Category)
                        @Html.HiddenFor(model => model.TargetGoods.Id)
                        @Html.HiddenFor(model => model.TargetGoods.UpdatedAt)
                        <div class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">カテゴリー</label>
                                    <div class="col-sm-9">
                                        <label class="form-text">
                                            @Model.TargetGoods.CategoryName
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">品名</label>
                                    <div class="col-sm-9">
                                        <label class="form-text">
                                            @Model.TargetGoods.GoodsName
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">品番</label>
                                    <div class="col-sm-9">
                                        <label class="form-text">
                                            @Model.TargetGoods.PartsNumber
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">在庫状況</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(model => model.TargetGoods.Stock, JamGoodsStockDomain.DomainList.ToSelectListItems(), null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button class="btn btn-success pull-right">登録</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>