@page
@model _17nsj.Jedi.Pages.NewsInfoManageModel
@{
    ViewData["Title"] = "News&Info管理";
}

<section class="content">
    <div>
        <div class="box box-primary">
            <div class="box-body">
                <div class="col-md-8 col-md-offset-2">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.IsEditMode)
                        @Html.HiddenFor(model => model.TargetNews.UpdatedAt)
                        <div class="form-horizontal">
                            <div class="box-body">
                                @if (Model.IsEditMode)
                                {
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">ID</label>

                                        <div class="col-sm-10">
                                            <label class="form-text">@Model.TargetNews.Category - @Model.TargetNews.Id</label>
                                            @Html.HiddenFor(model => model.TargetNews.Category)
                                            @Html.HiddenFor(model => model.TargetNews.Id)
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">カテゴリ*</label>

                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.TargetNews.Category, Model.CategoryList, null, new { @class = "form-control" })
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">タイトル*</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.TargetNews.Title, new { @class = "form-control", @placeholder = "30文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">サムネイルURL</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.TargetNews.ThumbnailURL, new { @class = "form-control", @placeholder = "200文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">画像URL</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.TargetNews.MediaURL, new { @class = "form-control", @placeholder = "200文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">取材担当*</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.TargetNews.Author, new { @class = "form-control", @placeholder = "30文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">関連URL</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.TargetNews.RelationalURL, new { @class = "form-control", @placeholder = "200文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">本文</label>

                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(model => model.TargetNews.Outline, new { @class = "form-control", @placeholder = "500文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label"></label>

                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(model => model.IsAuthorized)
                                        <label class="form-text">この記事は承認者の承認を受けた記事であることを確認しました。</label>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-success pull-right">登録</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
