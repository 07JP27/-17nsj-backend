@page
@model _17nsj.Jedi.Pages.ActivityDetailModel
@{
    ViewData["Title"] = "ActivityDetail";
}

<section class="content">
    <div>
        <div class="box box-primary" style="border-top: 30px solid @Model.CurrentAct.CategoryColor;">
            <div class="box-header with-border">
                <h3 style="margin-top: 0px; margin-bottom: 0px;">@Model.CurrentAct.Title <small>@Model.CurrentAct.Category-@Model.CurrentAct.Id</small></h3>
            </div>
            <div class="box-body">
                <div class="col-md-6 col-md-offset-3 col-xs-12">
                    <div style="text-align: center;" class="col-md-12">
                        <img src="@Model.CurrentAct.MediaURL" class="image col-md-12 col-xs-12">
                    </div>
                    <p style="margin-top: 10px;">
                        @Model.CurrentAct.Outline
                    </p>
                    <p style="margin-top: 10px;">
                        区分：@Model.CurrentAct.CategoryName
                    </p>
                    <p style="margin-top: 10px;">
                        日時：@Model.CurrentAct.Term
                    </p>
                    <p style="margin-top: 10px;">
                        場所：@Model.CurrentAct.Location
                    </p>
                    <iframe src="https://maps.gsi.go.jp/#17/@Model.CurrentAct.Latitude/@Model.CurrentAct.Longitude/&base=std&ls=std&disp=1&vs=c1j0h0k0l0u0t0z0r0s0f1" style="width: 100%; height: 500px;"></iframe>
                    ライセンスの関係上、国土地理院地図を使用しています。
                    <div class="pull-right" style="margin-top: 10px;">
                        <p>
                            最終更新日:@Model.CurrentAct.UpdatedAt
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

