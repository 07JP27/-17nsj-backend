@page
@model _17nsj.Jedi.Pages.NoticeBoardManageModel
@{
    ViewData["Title"] = "NoticeBoardManage";
}

<section class="content">
    <div>
        <div class="box box-primary">
            <div class="box-body">
                <div class="col-md-8 col-md-offset-2">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.HiddenFor(modelitem => Model.TargetNotice.Id)
                                    @Html.HiddenFor(modelitem => Model.IsEditMode)
                                    @Html.HiddenFor(modelitem => Model.TargetNotice.UpdatedAt)
                                    <label class="col-sm-2 control-label">件名</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(modelitem => Model.TargetNotice.Title, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">宛先</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(modelitem => Model.TargetNotice.Receiver, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">発信者</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(modelitem => Model.TargetNotice.Sender, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">内容</label>

                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(modelitem => Model.TargetNotice.Contents, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">掲載期限</label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(modelitem => Model.TargetNotice.Termination, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-success pull-right">登録</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>