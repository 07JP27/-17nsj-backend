@page
@model _17nsj.Jedi.Pages.NoticeBoardManageModel
@{
    ViewData["Title"] = "掲示管理";
}


@section header
{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}

<section class="content">
    <div>
        <div class="box box-primary">
            <div class="box-body">
                <div class="col-md-8 col-md-offset-2">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.TargetNotice.Id)
                                    @Html.HiddenFor(model => model.IsEditMode)
                                    @Html.HiddenFor(model => model.TargetNotice.UpdatedAt)
                                    <label class="col-sm-2 col-md-3 control-label">件名*</label>

                                    <div class="col-sm-10 col-md-9">
                                        @Html.TextBoxFor(model => model.TargetNotice.Title, new { @class = "form-control", @placeholder = "30文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-md-3 control-label">宛先*</label>

                                    <div class="col-sm-10 col-md-9">
                                        @Html.TextBoxFor(model => model.TargetNotice.Receiver, new { @class = "form-control", @placeholder = "30文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-md-3 control-label">発信者*</label>

                                    <div class="col-sm-10 col-md-9">
                                        @Html.TextBoxFor(model => model.TargetNotice.Sender, new { @class = "form-control", @placeholder = "30文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-md-3 control-label">内容*</label>

                                    <div class="col-sm-10 col-md-9">
                                        @Html.TextAreaFor(model => model.TargetNotice.Contents, new { @class = "form-control", @placeholder = "1000文字以内" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-md-3 control-label">掲載期限*</label>

                                    <div class="col-sm-10 col-md-9">
                                        @Html.TextBoxFor(model => model.TargetNotice.TerminationStr, new { @class = "form-control datetimepicker", @type = "datetime" })
                                    </div>
                                </div>

                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-success pull-right">登録</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/ja.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datetimepicker').datetimepicker({
                format: "YYYY年MM月DD日 HH時mm分",
                locale: 'ja'
            });
        })
    </script>
}