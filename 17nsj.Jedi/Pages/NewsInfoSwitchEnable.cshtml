@page
@model _17nsj.Jedi.Pages.NewsInfoSwitchEnableModel
@{
    ViewData["Title"] = "News&Info表示/非表示";
}

<section class="content">
    <div>
        <div class="box box-primary">
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.HiddenFor(model => model.CurrentNews.Category)
                @Html.HiddenFor(model => model.CurrentNews.Id)
                @Html.HiddenFor(model => model.CurrentNews.UpdatedAt)
                <div class="box-body">
                    <div class="form-horizontal col-md-6 col-md-offset-3">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">ID</label>
                            <div class="col-sm-9 form-text">
                                @Model.CurrentNews.Category - @Model.CurrentNews.Id
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">現在の状態</label>
                            <div class="col-sm-9 form-text">
                                @(Model.CurrentNews.IsAvailable ? "表示" : "非表示")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class=" col-md-6 col-md-offset-3">
                        @if (Model.CurrentNews.IsAvailable)
                        {
                            <button type="submit" class="btn btn-danger pull-right">非表示にする</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger pull-right">表示にする</button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

